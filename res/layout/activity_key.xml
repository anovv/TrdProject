<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@color/White"
	android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:orientation="vertical">
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="In order to use this app you need to obtain key and secret from btc-e.com. To do that, log in your account and click on &quot;Profile&quot;. Find &quot;API keys&quot; button there and click on it. Here you can create a new key. Insert some name for your key and click &quot;Create&quot; button. Don't forget to put a tick in &quot;trade&quot; and &quot;info&quot; fields, after that click on &quot;Save&quot;. Type your keys in your phone and you are good to go!" />
	
	    <TextView        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" />   
	    
	    
	    <TextView        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Current key: " />    
	    
	    <TextView
	        android:id="@+id/key"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" />   
	        
	    <TextView        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" />   
	    
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Current secret: " />
	    
	    <TextView
	        android:id="@+id/secret"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" />
	    
	    <TextView        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" />       
	    
	    <TextView        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="New key: " />   
	        
	    <EditText       
	        android:id="@+id/new_key"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	        
	    
	    <TextView        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="New Secret: " />   
	            
	    <EditText       
	        android:id="@+id/new_secret"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    
	    <Button 
	        android:id="@+id/submit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button"
	        android:textSize="14dip"
	        android:text="Submit" />           
	    
	</LinearLayout>
</ScrollView>
